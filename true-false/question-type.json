{
  "$schema": "https://schemas.examplary.ai/question-type.json",

  "id": "examplary.default.true-false",
  "public": true,

  "name": {
    "en": "True/false",
    "nl": "Waar/onwaar"
  },
  "description": {
    "en": "A question that requires students to choose between true or false.",
    "nl": "Een ja/nee-vraag met twee mogelijke antwoorden."
  },

  "icon": "./icon.svg",
  "components": {
    "assessment": "./component-assessment.tsx",
    "print": "./component-print.tsx",
    "results": "./component-results.tsx"
  },

  "hasSimpleScoring": true,
  "generation": {
    "enabled": true
  },

  "timeEstimateMinutes": 1,
  "index": 400,

  "settings": [
    {
      "id": "correctAnswer",
      "name": {
        "en": "Correct answer",
        "nl": "Juiste antwoord"
      },
      "type": "enum",
      "description": "The correct answer to the question, either 'true' or 'false' (as a JSON string!).",
      "options": [
        {
          "value": "true",
          "label": {
            "en": "True",
            "nl": "Waar"
          }
        },
        {
          "value": "false",
          "label": {
            "en": "False",
            "nl": "Onwaar"
          }
        }
      ]
    }
  ],

  "export": {
    "qti3": {
      "interaction": {
        "type": "ChoiceInteraction",
        "options": {
          "choices": [
            { "identifier": "true", "content": "True" },
            { "identifier": "false", "content": "False" }
          ],
          "minChoices": 1,
          "maxChoices": 1
        }
      }
    }
  },

  "translations": {
    "true": {
      "en": "True",
      "nl": "Waar"
    },
    "false": {
      "en": "False",
      "nl": "Onwaar"
    }
  }
}
