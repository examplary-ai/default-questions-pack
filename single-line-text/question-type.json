{
  "$schema": "https://schemas.examplary.ai/question-type.json",

  "id": "examplary.default.single-line-text",
  "public": true,

  "name": {
    "en": "Short answer",
    "nl": "Kort antwoord"
  },
  "description": {
    "en": "A question that requires a short text response.",
    "nl": "Een vraag die een kort tekstantwoord vereist."
  },

  "icon": "./icon.svg",
  "components": {
    "assessment": "./component-assessment.tsx",
    "print": "./component-print.tsx"
  },

  "generation": {
    "enabled": true
  },
  "grading": {
    "enabled": true
  },
  "timeEstimateMinutes": 2,

  "settings": [
    {
      "id": "maxLength",
      "type": "number",
      "name": {
        "en": "Maximum length",
        "nl": "Maximale lengte"
      },
      "min": 1,
      "max": 1000,
      "step": 1,
      "required": false,
      "description": "The maximum number of characters allowed in the answer - optional. Don't include unless relevant."
    }
  ],

  "shortcut": "1",
  "index": 100,

  "export": {
    "qti3": {
      "interaction": {
        "type": "TextEntryInteraction",
        "options": {
          "expectedLength": "=$.question.settings.maxLength"
        }
      }
    }
  },

  "translations": {
    "placeholder": {
      "en": "Type your answer...",
      "nl": "Typ je antwoord..."
    }
  }
}
